<div class="container my-3">
  <%= simple_form_for (@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address%>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests%>
    <%= f.input :img_url, as: :file %>
    <%= f.submit %>
  <% end %>
</div>
<p><%= link_to "Back", flats_path %></p>
