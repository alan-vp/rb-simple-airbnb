<%= render 'flats/partials/banner' %>
<h1 class="my-4"> <%= @flat.name %></h1>
<div class="row">
  <div class="flat-img-slider col-lg-8">
    <%= render 'flats/partials/carousel' %>
  </div>
  <div class="col-lg-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title text-center">Details</h4>
        <div class="card-text">
          <p><%= @flat.description %></p>
          <p>Price: <%= @flat.price_per_night %> <i class="fa-solid fa-euro-sign"></i></p>
          <p>Number of guests: <%= '<i class="fa-solid fa-person"></i>'.html_safe * @flat.number_of_guests%></p>
          <a href="#" class="btn btn-primary w-100">Book</a>
        </div>
      </div>
    </div>
  </div>
</div>
